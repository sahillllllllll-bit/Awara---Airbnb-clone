<% layout("/layout/boilerplate") -%>
<%- include("../includes/flash.ejs") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Login</h1>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <input name="username" class="form-control" id="username" placeholder="Enter username" type="text" required />
               
              </div>
          
              <div class="mb-3">
                <input name="password" class="form-control" id="password" placeholder="Enter password" type="password" required />
                
              </div>
              <button class="btn btn-success">login</button>
        </form>
    </div>
</div>